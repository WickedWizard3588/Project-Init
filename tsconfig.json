{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "./dist/",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"resolveJsonModule": true,
		"importsNotUsedAsValues": "error",
		"strictPropertyInitialization": true,
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"include": [
		"src/**/*",
		"test/**/*.ts",
	],
	"exclude": [
		"dist/**/*",
		"node_modules/**/*"
	]
}
